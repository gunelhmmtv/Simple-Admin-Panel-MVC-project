@using ProjectBusinessLogicLayer.DTOs
@model ProductAddDto
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}
<div asp-validation-summary="All"></div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
               @*  <h4 class="card-title">Textual inputs</h4> *@
                @* <p class="card-title-desc">
                    Here are examples of <code>.form-control</code> applied to each
                    textual HTML5 <code>&lt;input&gt;</code> <code>type</code>.
                </p> *@
            </div>

            <div class="card-body p-4">

                <div class="row">
                    <div class="col-lg-6">
                        <div>
                            <input type="hidden" id="product-id" asp-for="Id" />
                            <div class="mb-3">
                                <label for="example-text-input" class="form-label">Product Name</label>
                                <input class="form-control" type="text " asp-for="ProductName"  id="product-name" placeholder="Product Name">
                                <span asp-validation-for="ProductName" class="mt-3 text-danger"></span>
                            </div>


                            <div class="mb-3">
                                <label for="example-number-input" class="form-label">Price</label>
                                <input class="form-control" type="number" asp-for="Price" id="product-price" placeholder="Price">
                                <span asp-validation-for="Price" class="mt-3 text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="example-number-input" class="form-label">Stock Count</label>
                                <input class="form-control" type="number" asp-for="StockCount" id="stock-count" placeholder="StockCount">
                                <span asp-validation-for="StockCount" class="mt-3 text-danger"></span>
                            </div>
                            @* <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Image</h4>

                                </div>
                                <div class="card-body">

                                    <div>
                                        <form action="#" class="dropzone dz-clickable">

                                            <div class="text-center mt-4 dz-message needsclick">
                                                <h6>Drop files here or click to upload.</h6>
                                            </div>
                                        </form>
                                    </div>


                                </div>
                            </div> *@

                            <button type="submit" class="btn btn-primary w-lig" id="add-product-button">Create Product</button>

                        </div>
                    </div>



                </div>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script src="~/js/product.js"></script>
}

